{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "watch": "npm run build-ts && npx concurrently \"npm:watch-ts\" \"npm:watch-server\"",
    "watch-ts": "npx tsc -w",
    "watch-server": "npx nodemon ./bin/www",
    "build-ts": "npx tsc",
    "start": "node ./bin/www",
    "test": "jest",
    "clean": "rm -rf build/**/* && rm -rf build/* && touch -t '197001010000'build/.keep"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.3.2",
    "cookie-parser": "^1.4.5",
    "csurf": "^1.11.0",
    "dotenv": "^8.2.0",
    "ejs": "~2.6.1",
    "express": "~4.16.1",
    "helmet": "^3.22.0",
    "http-errors": "~1.6.3",
    "immutable": "^4.0.0-rc.12",
    "lodash": "^4.17.15",
    "morgan": "~1.9.1",
    "nodemailer": "^6.4.6",
    "pm2": "^4.2.3",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "socket.io": "^2.3.0",
    "source-map-support": "^0.5.16",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.9.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.4",
    "@types/helmet": "0.0.45",
    "@types/http-errors": "^1.6.3",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.9.8",
    "@types/socket.io": "^2.1.4",
    "babel-jest": "^25.2.3",
    "concurrently": "^5.1.0",
    "jest": "^25.2.3",
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2",
    "typescript": "^3.8.3"
  },
  "nodemonConfig": {
    "delay": 500,
    "verbose": false,
    "ignore": [
      "*.test.*"
    ],
    "watch": [
      "build",
      "bin"
    ]
  }
}
